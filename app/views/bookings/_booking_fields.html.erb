<div class="row nested-fields">

  <div class="col-md-8 field">
    <%= f.hidden_field :checkin, value: @bookings.first.checkin %>
    <%= f.hidden_field :checkout, value: @bookings.first.checkout %>
    <%= f.text_field :room_id, list: 'room_id', class: "form-control service" %>
    <datalist id="room_id">
      <%= options_for_select option_room_empty(@bookings.first.checkin, @bookings.first.checkout).pluck :name, :id %>
      <%= render "shared/show_error_message", field: :room_id, object: f.object %>
    </datalist>

  </div>
  <div class="col-md-2">
    <%= link_to_remove_association  f, class:"btn btn-outline-danger " do  %>
      <i class="fa fa-trash" aria-hidden="true"></i>
    <% end %>
  </div>
</div>

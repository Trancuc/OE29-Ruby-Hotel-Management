<div class="form-group">
  <tr class="booking">
    <td><%= image_tag booking.image_room, class: "image_booking" %></td>
    <td><%= booking.room_name %></td>
    <td><%= booking.room_view_name %></td>
    <td><%= number_with_delimiter booking.room_price, delimiter: "." %><%= t ".vnd" %></td>
    <td><%= booking.room_type_name %></td>
    <td><%= booking.checkin %></td>
    <td><%= booking.checkout %></td>
    <td><%= number_with_delimiter booking.price, delimiter: "." %> <%= t ".vnd" %></td>
    <td>
      <% if booking.bill.waiting? %>
        <button class="btn btn-outline-danger bill-cancle" >
          <i class="fa fa-trash" aria-hidden="true"></i>
        </button>
      <% end %>
    </td>
  </tr>
</div>

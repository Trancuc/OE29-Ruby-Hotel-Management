<div class="col-md-4 relate_room_item">
  <div>
    <%= link_to relate_room do %>
      <%= image_tag relate_room.pictures[0].picture_url if relate_room.pictures[0].present? %>
    <% end %>
  </div>
  <div class="relate_room_item_info">
    <%= link_to relate_room do %>
      <h3><%= relate_room.name %></h3>
    <% end %>
    <div class="star_relate">
      <%= render partial: "rooms/star_total", locals: {room: relate_room} %>
    </div>
    <div><%= t ".price" %>: <%= number_with_delimiter(relate_room.price, delimiter: ".") %><%= t "global.vnd" %> / <%= t ".night" %></div>
    <div><%= t ".type" %>: <%= relate_room.type_name %></div>
    <div><%= t ".view" %>: <%= relate_room.view_name %></div>
  </div>
</div>

<div class="col-md-4 offset-1 list_room_item_content">
  <div>
    <h3><%= room.name %></h3>
    <div class="star_total_title">
      <%= render partial: "rooms/star_total", locals: {room: room} %>
    </div>
    <div class="room_price"><%= t ".start_from" %>
      <b class="price">
        <%= number_with_delimiter(room.price, delimiter: ".") %>
        <%= t "global.vnd" %>
      </b> / <%= t ".night" %>
    </div>
    <div><%= room.des %></div>
    <div class="info">
      <div><%= t ".deposit" %>: <%= Settings.deposit %>%</div>
      <div><%= t ".type" %>: <%= room.type_name %></div>
      <div><%= t ".view" %>: <%= room.view_name %></div>
    </div>

    <div class="detail_link">
      <%= link_to room do %>
        <%= t(".view_detail") %>
        <i class="fas fa-caret-right"></i>
      <% end %>
    </div>
  </div>
</div>

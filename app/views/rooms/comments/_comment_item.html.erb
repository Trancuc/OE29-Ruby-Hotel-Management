<li id="comment-<%= comment.id %>">
  <div class="comment-main-level">
    <%= image_tag "avatar_1.jpg", class: "comment-avatar" %>
    <div class="comment-box">
      <div class="comment-head">
        <h6 class="comment-name by-author"><%= comment.user_name %></h6>
        <span><%= time_ago_in_words comment.created_at %></span>
        <i class="fa fa-reply open-reply btn-comment-action"
           data-comment-id="<%= comment.id %>"></i>
        <% if can? :destroy, comment %>
          <%= link_to comment,
                      class: "btn-comment-action",
                      method: :delete,
                      data: { confirm: t("global.you_sure") },
                      remote: true do %>
            <i class="fa fa-trash"></i>
          <% end %>
        <% end %>

      </div>
      <div class="comment-content">
        <%= comment.content %>
      </div>
    </div>
  </div>
  <ul class="comments-list reply-list" id="<%= "reply-list-#{comment.id}" %>" >
    <%= render partial: "rooms/comments/reply_comment_item", collection: comment.comments, as: :comment %>
  </ul>
  <div id="<%= "form-reply-#{comment.id}" %>" class="form-reply hidden">
    <%= render partial: "rooms/comments/form_reply_comment", locals: {comment: comment} %>
  </div>
</li>

<div class="container room-search">
  <%= render "shared/search_room_form" %>
  <h3 class="title"><%= t ".title" %></h3>
  <div class="room-main">
  <% @rooms.each do |room| %>
    <div class="row list-room">
      <div class="col-md-3 image">
        <%= image_tag Settings.profile.image_ava, alt: t(".rails_logo") %></div>
      <div class="col-md-9">
        <div class="row">
          <div class="col-md-6">
            <h3 class ="room-name"><%= room.name %></h3>
            <ul class= "room-des">
              <li><%= t ".price" %><%= room.price %></li>
              <li><%= t ".type" %> <%= room.type_name %></li>
              <li><%= t ".view" %> <%= room.view_name %></li>
            </ul>
          </div>
          <div class="col-md-6">
            <div class="form">
              <%= check_box_tag "Select", room.id, false, class: "select", id: "room-#{room.id}" %>
              <%# <button type="button" class="btn btn-success btn-select" id= "select" data-info = "false" data-id ="<%=room.id" ><%= t ".select"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  <button type="button" class="btn btn-success btn-select" id= "reservation"><%= t ".select"%></button>
</div>
<div id="list">
  <ul class="room-des"></ul>
</div>

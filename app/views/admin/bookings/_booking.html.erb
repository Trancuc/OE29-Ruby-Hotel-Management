<tr class="admin_room_item">
  <td><%= index_of_page(@bookings) + booking_counter %></td>
  <td><%= booking.id %></td>
  <td><%= booking.room_name %></td>
  <td><%= number_with_delimiter booking.price, delimiter: "." %><%= t ".vnd" %></td>
  <td><%= booking.checkin.strftime Settings.date_time %></td>
  <td><%= booking.checkout.strftime Settings.date_time  %></td>
  <td class="btn-bill">
    <%= link_to admin_user_bill_booking_path(@user, @bill, booking), class:"btn btn-outline-info bill-view" do %>
      <i class="fa fa-eye" aria-hidden="true"></i>
    <% end %>
    <% if @bill.accept? %>
      <%= link_to edit_admin_booking_path(booking.id), class:"btn btn-outline-success bill-view"  do %>
        <i class="fa fa-plus-square" aria-hidden="true"></i>
      <% end %>
    <% end %>
  </td>
</tr>

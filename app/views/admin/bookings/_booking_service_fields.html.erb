<div class="row nested-fields">
  <div class="col-md-8 field">
    <%= f.text_field :service_id, list: 'service_id', class: "form-control service" %>
    <datalist id="service_id">
      <%= options_for_select(Service.all.map {| item | [item.name, item.id]}) %>
      <%= render "shared/show_error_message", field: :service_id, object: f.object %>
    </datalist>
  </div>
  <div class="col-md-2 field">
    <%= f.number_field :amount, class: "form-control amount_service" %>
    <%= render "shared/show_error_message", field: :amount, object: f.object %>
  </div>
  <div class="col-md-2">
    <%= link_to_remove_association  f, class:"btn btn-outline-danger " do  %>
      <i class="fa fa-trash" aria-hidden="true"></i>
    <% end %>
  </div>
</div>

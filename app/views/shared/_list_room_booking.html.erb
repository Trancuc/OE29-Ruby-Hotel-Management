<tr class="bill">
  <th scope="row"><%= index_of_page(@bills) + bill_counter %></th>
  <td><%= bill.id%></td>
  <td><%= bill.created_at %></td>
  <td><%= bill.price %></td>
  <td><%= bill.status %></td>
  <td>
    <button class="btn btn-outline-info bill-view" data-url="<%= bookings_path(bill_id: bill.id)  %> " data-toggle="modal" data-target="#exampleModalCenterbill">
      <i class="fa fa-eye" aria-hidden="true"></i>
    </button>
    <% if bill.waiting? %>
      <button class="btn btn-outline-danger bill-cancle" data-url="<%= bill_path(bill.id) %>">
        <i class="fa fa-trash" aria-hidden="true"></i>
      </button>
  <% end %>
  </td>

</tr>
<div class="modal" id="exampleModalCenterbill" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-bill modal-dialog-centered" role="document">

    <div class="modal-content">
      <div class="modal-header main-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-main">
      </div>
    </div>
  </div>
</div>
